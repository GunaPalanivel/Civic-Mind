# Google Cloud Configuration
GCP_PROJECT_ID=civic-mind-prod
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Firebase Configuration
FIREBASE_PROJECT_ID=civic-mind-prod
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=civic-mind-prod.firebaseapp.com
FIREBASE_STORAGE_BUCKET=civic-mind-prod.appspot.com

# Google Maps API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Vertex AI
VERTEX_AI_LOCATION=us-central1

# Application URLs
NEXT_PUBLIC_API_URL=https://api.civic-mind.com
FRONTEND_URL=https://civic-mind.com

# JWT Configuration
JWT_SECRET=your_jwt_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WEBSOCKET_PORT=3001
WEBSOCKET_CORS_ORIGIN=https://civic-mind.com
